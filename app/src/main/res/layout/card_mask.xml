<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_store"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_store"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="판매처 이름"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_store"
                app:layout_constraintStart_toEndOf="@id/iv_store"
                app:layout_constraintTop_toTopOf="@id/iv_store" />

            <ImageView
                android:id="@+id/iv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_move_to_inbox"
                app:layout_constraintEnd_toEndOf="@id/iv_store"
                app:layout_constraintStart_toStartOf="@id/iv_store"
                app:layout_constraintTop_toBottomOf="@id/tv_store" />

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100개 이상"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_stock"
                app:layout_constraintStart_toStartOf="@id/tv_store"
                app:layout_constraintTop_toTopOf="@id/iv_stock" />

            <ImageView
                android:id="@+id/iv_stock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_access_time"
                app:layout_constraintEnd_toEndOf="@id/iv_store"
                app:layout_constraintStart_toStartOf="@id/iv_store"
                app:layout_constraintTop_toBottomOf="@id/iv_stock" />

            <TextView
                android:id="@+id/tv_stock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입고 시간 : "
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_stock_time"
                app:layout_constraintStart_toStartOf="@id/tv_stock"
                app:layout_constraintTop_toTopOf="@id/iv_stock_time" />

            <ImageView
                android:id="@+id/iv_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_autorenew"
                app:layout_constraintEnd_toEndOf="@id/iv_store"
                app:layout_constraintStart_toStartOf="@id/iv_store"
                app:layout_constraintTop_toBottomOf="@id/iv_stock_time" />

            <TextView
                android:id="@+id/tv_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="갱신 시간 : "
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_update_time"
                app:layout_constraintStart_toStartOf="@id/tv_store"
                app:layout_constraintTop_toTopOf="@id/iv_update_time" />

            <ImageView
                android:id="@+id/iv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_location_on"
                app:layout_constraintEnd_toEndOf="@id/iv_store"
                app:layout_constraintStart_toStartOf="@id/iv_store"
                app:layout_constraintTop_toBottomOf="@id/iv_update_time" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300m"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_distance"
                app:layout_constraintStart_toStartOf="@id/tv_store"
                app:layout_constraintTop_toTopOf="@id/iv_distance" />

            <android.widget.Button
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                android:text="자세히 보기"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_map"
                app:layout_constraintTop_toBottomOf="@+id/tv_distance" />

            <android.widget.Button
                android:id="@+id/btn_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:text="지도에서 보기"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btn_more"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>